{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "the-cycle-reborn-settings",
  "version": "0.1.0",
  "identifier": "com.the-cycle-reborn-settings.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "the-cycle-reborn-settings",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": {
        "img-src": "'self' http://asset.localhost blob: data:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["$RESOURCE/images/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../images/": "images/",
      "../collect/result/items.json": "items.json"
    }
  }
}
