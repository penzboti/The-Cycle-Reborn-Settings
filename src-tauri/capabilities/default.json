{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$RESOURCE/items.json" }
      ]
    },
    {
      "identifier": "fs:allow-appdata-read",
      "allow": [
        { "path": "$APPDATA/kits.json" }
      ]
    }
  ]
}

